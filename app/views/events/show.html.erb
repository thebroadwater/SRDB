        <div>
          <%= link_to "Edit", edit_event_path(@event), :class => "btn btn-primary", :role=> "button"%>
          <%= link_to "Back", events_path, :class =>"btn btn-primary", :role => "button"  %>
        </div>
      </div>
<% end %>

    </div>
  </div>
</div>
