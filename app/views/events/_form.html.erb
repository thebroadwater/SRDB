<% if user_signed_in? %>
  <%= form_for @event do |f| %>

    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@event.errors.count, "error") %> prohibited
          this location from being saved:
        </h2>
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :summary, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :summary, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :detail, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_area :detail, :rows => '6', :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div>
        <%= f.submit "Submit", :class => "btn btn-primary"%>
        <% if @event.id.nil? %>
          <%= link_to "Cancel", events_path, :class =>"btn btn-primary", :role => "button" %>
        <% else %>
          <%= link_to "Cancel", event_path, :class =>"btn btn-primary", :role => "button" %>
        <% end %>
      </div>
    </div>

  <% end %>
<% end %>
