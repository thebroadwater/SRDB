<% if !Rails.env.production? %>
  <%= form_for @location do |f| %>

    <% if @location.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@location.errors.count, "error") %> prohibited
          this location from being saved:
        </h2>
        <ul>
          <% @location.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_area :description, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :kind, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :kind, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :address, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :address, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :city, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :city, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :country, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :country, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :notes, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_area :notes, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div>
        <%= f.submit "Submit", :class => "btn btn-primary"%>
        <% if @location.id.nil? %>
          <%= link_to "Cancel", locations_path, :class =>"btn btn-primary", :role => "button"  %>
        <% else %>
          <%= link_to "Cancel", location_path, :class =>"btn btn-primary", :role => "button"  %>
        <% end %>
      </div>
    </div>

  <% end %>
<% end %>
