<% if user_signed_in? %>
  <%= form_for @person do |f| %>

    <% if @person.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@person.errors.count, "error") %> prohibited
          this person from being saved:
        </h2>
        <ul>
          <% @person.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "Summary", :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :summary, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :metatype, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :metatype, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :affiliation, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :affiliation, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :details, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_area :details, :rows => '4', :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :notes, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_area :notes, :rows => '6', :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :active, :class => "col-md-2 col-form-label" %>
      <div class="col-md-8">
        <%= f.text_field :active, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div>
        <%= f.submit "Submit", :class => "btn btn-primary"%>
        <% if @person.id.nil? %>
          <%= link_to "Cancel", people_path, :class =>"btn btn-primary", :role => "button"  %>
        <% else %>
          <%= link_to "Cancel", person_path, :class =>"btn btn-primary", :role => "button"  %>
        <% end %>
      </div>
    </div>

  <% end %>
<% end %>
